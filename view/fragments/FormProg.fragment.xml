<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
>
	<Dialog
		contentHeight="25%"
		contentWidth="25%"
		draggable="true"
		resizable="true"
		title="{i18n>progFerias}"
	>
		<buttons>
			<Button
				text="{i18n>aprovar}"
				type="Accept"
				press=".handleAprovar"
			/>		
			<Button
				text="{i18n>reprovar}"
				type="Reject"
				press=".handleReprovar"
			/>
		</buttons>
		<content>
			<f:SimpleForm
				id="id-form"
				editable="true"
				layout="ResponsiveGridLayout"
				labelSpanXL="3"
				labelSpanL="3"
				labelSpanM="3"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="4"
				emptySpanL="4"
				emptySpanM="4"
				emptySpanS="0"
				columnsXL="1"
				columnsL="1"
				columnsM="1"
				singleContainerFullSize="false"
			>
				<f:content>
					<Label
						text="Ausência"
						labelFor="id-label-ausencia"
					/>
					<Text
						id="id-text-ausencia"
						value="{form>/Ausencia}"
					>						
					</Text>	
					<Label
						text="Início"
						labelFor="id-label-inicio"
					/>
					<Text
						id="id-text-inicio"
						value="{form>/Inicio}"
					>						
					</Text>					
					<Label
						text="Fim"
						labelFor="id-label-fim"
					/>
					<Text
						id="id-text-fim"
						value="{form>/Fim}"
					>						
					</Text>														
					<Label
						text="Justificativa"
						labelFor="id-textarea-justificativa"
					/>
					<TextArea
						id="id-textarea-justificativa"
						height=""
						rows="4"
						required="true"
						value="{form>/Justificativa}"
					>
						
					</TextArea>
				</f:content>
			</f:SimpleForm>
		</content>
		<customHeader>
		</customHeader>
		<endButton>
		</endButton>
		<subHeader>
		</subHeader>
	</Dialog>
</core:FragmentDefinition>